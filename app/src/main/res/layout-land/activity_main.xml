<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!-- Display Screen -->
    <TextView
        android:textSize="40sp"
        android:gravity="bottom|end"
        android:id="@+id/calcResult"
        android:background="#000000"
        android:layout_height="100dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:text="0" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <Button
            android:textSize="20sp"
            android:text="mc"
            android:layout_width="0dp"
            android:id="@+id/mcBtn"
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF" />
        <Button
            android:layout_margin="4dp"
            android:id="@+id/mpBtn"
            android:text="m+"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_height="match_parent" />

        <Button
            android:textSize="20sp"
            android:text="m-"
            android:layout_width="0dp"
            android:id="@+id/mmBtn"
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF" />
        <Button
            android:layout_margin="4dp"
            android:id="@+id/mrBtn"
            android:text="mr"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_height="match_parent" />



        <Button
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:id="@+id/clearAllBtn"
            android:text="C"
            android:backgroundTint="#A5A5A5"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="0dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="±"
            android:id="@+id/signBtn"
            android:textColor="#000000"
            android:layout_margin="4dp"
            android:backgroundTint="#A5A5A5"
            android:layout_width="0dp" />

        <Button
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:backgroundTint="#A5A5A5"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:id="@+id/percentageBtn"
            android:text="%"
            android:layout_weight="1"
            android:textColor="#000000" />

        <Button
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:text="÷"
            android:layout_width="0dp"
            android:backgroundTint="#FF9500"
            android:id="@+id/divideBtn"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:backgroundTint="#333333"
            android:id="@+id/squrBtn"
            android:layout_weight="1"
            android:text="x²"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:text="x³"
            android:textSize="20sp"
            android:id="@+id/cubeBtn"
            android:backgroundTint="#333333"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_width="0dp" />

        <Button
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:backgroundTint="#333333"
            android:id="@+id/powerBtn"
            android:layout_weight="1"
            android:text="xʸ"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:text="log"
            android:textSize="20sp"
            android:id="@+id/logBtn"
            android:backgroundTint="#333333"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_width="0dp" />

        <Button
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#FFFFFF"
            android:id="@+id/digit7Btn"
            android:backgroundTint="#333333"
            android:layout_height="match_parent" />

        <Button
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit8Btn"
            android:backgroundTint="#333333"
            android:text="8"
            android:textColor="#FFFFFF" />

        <Button
            android:textSize="20sp"
            android:id="@+id/digit9Btn"
            android:layout_margin="4dp"
            android:backgroundTint="#333333"
            android:layout_weight="1"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />

        <Button
            android:backgroundTint="#FF9500"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:id="@+id/multiplicationBtn"
            android:layout_weight="1"
            android:text="×"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#333333"
            android:text="1/x"
            android:id="@+id/overBtn"
            android:textSize="15sp" />

        <Button
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:backgroundTint="#333333"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/sqrrootBtn"
            android:text="√x"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#333333"
            android:text="∛x"
            android:id="@+id/cuberootBtn"
            android:textSize="20sp" />

        <Button
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:backgroundTint="#333333"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/lnBtn"
            android:text="ln"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />


        <Button
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:backgroundTint="#333333"
            android:id="@+id/digit4Btn"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:id="@+id/digit5Btn"
            android:textSize="20sp"
            android:text="5"
            android:textColor="#FFFFFF" />

        <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#333333"
            android:textSize="20sp"
            android:id="@+id/digit6Btn"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:textColor="#FFFFFF"
            android:text="-"
            android:id="@+id/subtractionBtn"
            android:backgroundTint="#FF9500"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <Button
            android:textSize="20sp"
            android:text="sin"
            android:id="@+id/sineBtn"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:backgroundTint="#333333"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent" />

        <Button
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:text="cos"
            android:id="@+id/cosineBtn"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_width="0dp" />
        <Button
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:text="tan"
            android:id="@+id/tangentBtn"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:layout_width="0dp" />

        <Button
            android:layout_width="0dp"
            android:id="@+id/FactorialBtn"
            android:text="x!"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:layout_weight="1" />



        <Button
            android:layout_width="0dp"
            android:id="@+id/digit1Btn"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:textSize="20sp"
            android:backgroundTint="#333333"
            android:layout_margin="4dp"
            android:text="2"
            android:textColor="#FFFFFF"
            android:id="@+id/digit2Btn"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#333333"
            android:id="@+id/digit3Btn"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:backgroundTint="#FF9500"
            android:id="@+id/additionBtn"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:text="sinh"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:id="@+id/sinhBtn"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:layout_height="match_parent" />

        <Button
            android:layout_height="match_parent"
            android:text="cosh"
            android:textSize="15sp"
            android:layout_margin="4dp"
            android:id="@+id/coshBtn"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />
        <Button
            android:text="tanh"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:id="@+id/tanhBtn"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:layout_height="match_parent" />

        <Button
            android:layout_height="match_parent"
            android:text="π"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:id="@+id/piBtn"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_height="match_parent"
            android:text="rand"
            android:textSize="15sp"
            android:layout_margin="4dp"
            android:id="@+id/randBtn"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_margin="4dp"
            android:text="0"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/digit0Btn"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333" />

        <Button
            android:layout_margin="4dp"
            android:id="@+id/decimalPointBtn"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:text="."
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/calculateBtn"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:backgroundTint="#FF9500"
            android:layout_width="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>