<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:text="0"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/resultDisplay"
        android:gravity="bottom|end"
        android:background="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:textSize="25sp"
            android:id="@+id/clearBtn"
            android:text="C"
            android:layout_margin="4dp"
            android:textColor="#000000"
            android:backgroundTint="#A5A5A5"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp" />

        <Button
            android:textSize="25sp"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:backgroundTint="#A5A5A5"
            android:id="@+id/negateBtn"
            android:text="±"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:backgroundTint="#A5A5A5"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="match_parent"
            android:id="@+id/percentBtn"
            android:text="%"
            android:layout_margin="4dp"
            android:textSize="30sp" />

        <Button
            android:text="÷"
            android:textSize="30sp"
            android:backgroundTint="#FF9500"
            android:id="@+id/divBtn"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <Button
            android:layout_height="match_parent"
            android:backgroundTint="#333333"
            android:id="@+id/num7Btn"
            android:layout_margin="4dp"
            android:textSize="30sp"
            android:text="7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:id="@+id/num8Btn"
            android:backgroundTint="#333333"
            android:layout_height="match_parent"
            android:text="8" />

        <Button
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="9"
            android:backgroundTint="#333333"
            android:textSize="30sp"
            android:id="@+id/num9Btn"
            android:layout_height="match_parent" />

        <Button
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:text="×"
            android:backgroundTint="#FF9500"
            android:layout_width="0dp"
            android:id="@+id/multiplyBtn"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:text="4"
            android:backgroundTint="#333333"
            android:textSize="30sp"
            android:layout_margin="4dp"
            android:id="@+id/num4Btn"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:text="5"
            android:textSize="30sp"
            android:id="@+id/num5Btn"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:backgroundTint="#333333"
            android:layout_height="match_parent" />

        <Button
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="6"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/num6Btn"
            android:textSize="30sp"
            android:textColor="#FFFFFF" />

        <Button
            android:text="-"
            android:textSize="30sp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:id="@+id/minusBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:text="1"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:id="@+id/num1Btn"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:id="@+id/num2Btn"
            android:layout_height="match_parent"
            android:backgroundTint="#333333"
            android:layout_margin="4dp"
            android:text="2" />

        <Button
            android:id="@+id/num3Btn"
            android:textSize="30sp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:layout_width="0dp"
            android:text="3" />

        <Button
            android:layout_height="match_parent"
            android:id="@+id/plusBtn"
            android:text="+"
            android:textSize="30sp"
            android:layout_weight="1"
            android:backgroundTint="#FF9500"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            android:layout_width="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">

        <Button
            android:layout_width="0dp"
            android:textSize="30sp"
            android:backgroundTint="#333333"
            android:layout_weight="2"
            android:id="@+id/num0Btn"
            android:layout_margin="4dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/decimalBtn"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:text="."
            android:backgroundTint="#333333"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_weight="1" />

        <Button
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:backgroundTint="#FF9500"
            android:id="@+id/equalsBtn"
            android:text="=" />
    </LinearLayout>

</LinearLayout>